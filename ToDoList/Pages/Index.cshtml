@page
@using System.Collections.Generic
@model IndexModel
@{
    ViewData["Title"] = "To Do List";
}

<style>
	body {
		font-family: Arial, sans-serif;
		margin: 0;
		padding: 0;
	}

	p {
		color: green;
		font-family: Arial, sans-serif;
		text-align: center;
	}

	form {
		width: 300px;
		margin: 20px auto;
	}

	div {
		border: 1px outset lightblue;
		background-color: white;
		text-align: center;
	}

	label {
		display: block;
		margin-bottom: 0px;
		font-weight: bold;
	}

	input[type="text"] {
		width: 100%;
		padding: 8px;
		margin-bottom: 10px;
		border: 1px solid #ccc;
		border-radius: 4px;
		box-sizing: border-box;
	}

	input[type="radio"] {
		margin-bottom: 10px;
	}

		input[type="radio"]:checked + label {
			font-weight: bold;
			color: #007bff;
		}

	input[type="checkbox"] {
		margin-bottom: 10px;
	}

		input[type="checkbox"]:checked + label {
			font-weight: bold;
			color: #007bff;
		}

	input[type="submit"] {
		padding: 10px 15px;
		background-color: #4caf50;
		color: white;
		border: none;
		border-radius: 4px;
		cursor: pointer;
	}

		input[type="submit"]:hover {
			background-color: #45a049;
		}

	input[type="password"] {
		width: 100%;
		padding: 8px;
		margin-bottom: 10px;
		border: 1px solid #ccc;
		border-radius: 4px;
		box-sizing: border-box;
	}

	input[type="email"] {
		width: 100%;
		padding: 8px;
		margin-bottom: 10px;
		border: 1px solid #ccc;
		border-radius: 4px;
		box-sizing: border-box;
	}

	button {
		background-color: #04AA6D;
		border: none;
		color: white;
		padding: 15px 32px;
		text-align: center;
		display: inline-block;
	}

	h3 {
		color: #009933;
		font-size: 20px;
		font-weight: bold;
		font-family: Arial, sans-serif;
	}

	li {
		list-style-type: none;
		padding: 5px 0;
	}
</style>
<h2>To Do List</h2>

<form method="post">
    <div class="form-group">
        <label for="taskInput">Enter Task:</label>
        <input type="text" class="form-control" id="taskInput" asp-for="TaskName">
    </div>
    <button type="submit" class="btn btn-primary">Submit Task</button>
</form>

@if (Model.Tasks.Any())
{
    <h3>Tasks:</h3>
    <ul>
        @foreach (var task in Model.Tasks)
        {
            <li>
                @task
                <form method="post" asp-page-handler="EditTask" asp-route-task="@task">
                    <button type="submit" class="btn btn-link">Edit</button>
                </form>
                <form method="post" asp-page-handler="DeleteTask" asp-route-task="@task">
                    <button type="submit" class="btn btn-link">Delete</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No tasks added yet.</p>
}
